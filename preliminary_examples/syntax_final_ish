### Structs
struct Coordinate {
    x : int,
    y : int,
}
struct Person {
    name : String,
    age  : int,
}

Coordinate p = {
    x: 10,
    y: 5,
}


### Enum
enum Color {RED, BLUE, GREEN}



### Maps
scores : (string, int) map {
    "Alice", 94
    "Peter", 87
}

scores : map of (string, int)  {
    "Alice", 94
    "Peter", 87
}



### Switch-case
switch (x) {
    case 1: {
            print "two"
            break
    }
    
    case 2: {
            print "Towards "
            print way,
            print " there is "
            print totaldistance
            print " kilometers."
            break
    }
    case 3: print "heps, kun et statement"
    
    default {
        print "no case found"
    }
}



### Standart in 

### input ##

x : int := readInt() 

ostemad := readLine() 

x : float := readFloat() 

x : int := input(int)        # t : "5",
x,y,z := input(int)     # x : "3", y : "6", z: "2"
 

### input_and_convert ###
t = 3
x : list of int = input(...t, int)     # x : [ 4 , 8 , "hello"], converts input to string

##input: 
## 

x : list of string = input(...t, string)     # x : [4,2,"ost"], define type

x = input("#", int)  # Read input as int until the string is read



